<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/logo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Please enter a team name"
        android:inputType="text"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="286dp" />

    <TextView
        android:id="@+id/teamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Name"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="331dp" />

    <EditText
        android:id="@+id/editTeamAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Please enter a ZIP code"
        android:inputType="text"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="360dp" />

    <TextView
        android:id="@+id/teamAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Address"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="405dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="100dp"
        tools:srcCompat="@drawable/ic_logo_00" />

    <Button
        android:id="@+id/OpenInGoogleMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPEN IN GOOGLE MAPS"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="464dp" />

    <TextView
        android:id="@+id/teamTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Manager"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="240dp" />

</androidx.constraintlayout.widget.ConstraintLayout>